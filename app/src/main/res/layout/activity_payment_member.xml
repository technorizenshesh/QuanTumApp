<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LoginActivity"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_above="@+id/llText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/imgBack"
                    android:src="@drawable/back"
                    android:layout_margin="@dimen/_15sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp">

                </ImageView>



                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@mipmap/logo_black"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_130sdp"
                        >

                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/_20sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/txtPayment"
                        android:gravity="center"
                        android:background="@drawable/login_btn"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:text="Payment Member"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        />


                    <TextView
                        android:elevation="@dimen/_2sdp"
                        android:id="@+id/txtPayment1"
                        android:gravity="center"
                        android:background="@drawable/bg_btn_gray"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:text="Sub Member 1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        />

                    <TextView
                        android:elevation="@dimen/_2sdp"
                        android:gravity="center"
                        android:background="@drawable/bg_btn_gray"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:text="Sub Member 2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        />

                    <TextView
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:elevation="@dimen/_2sdp"
                        android:gravity="center"
                        android:background="@drawable/bg_btn_gray"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:text="Sub Member 3"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        />

                </LinearLayout>



            </LinearLayout>

        </androidx.core.widget.NestedScrollView>



        <LinearLayout
            android:id="@+id/llText"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_20sdp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            >

            <RelativeLayout
                android:id="@+id/RR_one"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/teal_200"
                    android:text="开民"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                </TextView>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/RR_Two"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:text="开民"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                </TextView>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/RR_three"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:text="开民"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                </TextView>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/RR_four"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:text="开开"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                </TextView>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/RR_five"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:text="开开"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                </TextView>

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</layout>